pipeline {

    agent none

    stages {
        stage('Checkout') {
            agent {
                docker { image 'maven:alpine-test' }
            }
            steps{
                checkout scm
            }

        }
        stage('Build') {
            agent {
                docker { image 'maven:alpine-test' }
            }
            steps{
                sh "mvn clean install"
            }
        }
    }
}
