pipeline {
    // agent {
    //     label 'maven'
    // }

    agent {
        docker {
            image 'maven:alpine-test'
            label 'docker'
            args  '-v /tmp:/tmp'
        }
    }

    stages {
        stage('Checkout') {
            steps{
                checkout scm
            }

        }
        stage('Build') {
            steps{
                sh "mvn clean install"
            }
        }
    }
}
