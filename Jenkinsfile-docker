pipeline {
    // agent {
    //     label 'maven'
    // }

    agent {
        node {label 'dockernode'}
        docker {
            image 'lokeshkamalay/maven:alpine-test'
            label 'dockernode'
        }
    }

    stages {
        stage('Checkout') {
            steps{
                checkout scm
            }

        }
        stage('Build') {
            steps{
                sh "mvn clean install"
            }
        }
    }
}
